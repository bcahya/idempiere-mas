	<parameter name="C_BPartner_ID" class="java.lang.Integer"/>
	<queryString>
		<![CDATA[SELECT bp.TotalOpenBalance AS TotalOpenBalance, COUNT(inv.*) AS CountOut FROM C_BPartner bp
INNER JOIN C_Invoice inv ON inv.C_BPartner_ID = bp.C_BPartner_ID
WHERE bp.C_BPartner_ID = $P{C_BPartner_ID} AND inv.DocStatus IN ('CO', 'CL') AND inv.IsPaid = 'N'
GROUP BY bp.C_BPartner_ID]]>
	</queryString>
	<field name="totalopenbalance" class="java.math.BigDecimal"/>
	<field name="countout" class="java.lang.Long"/>
